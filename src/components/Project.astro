---
const { project, key } = Astro.props;
---

<article class="project" id={key} data-skills={project.skills.join(', ')}>
  <img src={project.image} alt={project.name} class="banner"/>
  <section class="details">
    <div>
      <img src={project.favicon} alt={`${project.name} logo`} class="icon"/>
    </div>

    <div>
      <h2>{project.name}</h2>
      <p>{project.description}</p>
      <a href={project.url} target="_blank" rel="noopener noreferrer">View Project</a>
    </div>
  </section>
</article>

<style lang="less">
article.project {
  border: 1px solid #ddd;
  border-radius: 10px;
  padding: 20px;
  margin: 20px auto;
  max-width: 450px;
  text-align: center;
  transition: border 0.3s;

  &:hover {
    border: 1px solid #007acc;
  }

  .details {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;

    img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      margin-bottom: 10px;
    }
  }

  img {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
    margin-bottom: 15px;
  }

  h2 {
    margin-top: 0;
    font-size: 24px;
    color: #333;
  }

  p {
    font-size: 16px;
    color: #666;
    margin-bottom: 15px;
  }

  a {
    display: inline-block;
    padding: 10px 20px;
    background-color: #007acc;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s;

    &:hover {
      background-color: #005f99;
    }
  }
}
</style>